<h1>Listing invitations</h1>

<table>
  <tr>
    <th>Sender</th>
    <th>Username</th>
    <th>Password</th>
    <th>Emails</th>
    <th>Invitationmessage</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invitations.each do |invitation| %>
  <tr>
    <td><%= invitation.sender_id %></td>
    <td><%= invitation.username %></td>
    <td><%= invitation.password %></td>
    <td><%= invitation.emails %></td>
    <td><%= invitation.invitationmessage %></td>
    <td><%= link_to 'Show', invitation %></td>
    <td><%= link_to 'Edit', edit_invitation_path(invitation) %></td>
    <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

